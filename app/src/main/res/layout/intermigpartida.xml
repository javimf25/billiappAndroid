<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="#ADD8E6"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent"
                                             tools:layout_editor_absoluteY="81dp">
    <EditText android:id="@+id/contrincant2" android:layout_width="219dp" android:layout_height="53dp"
              android:hint="Nom del contrincant 2"
              android:ems="10"
              android:background="#ffffff"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/contrincant1"
              android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/validarusuaris"/>
    <EditText android:id="@+id/contrincant1" android:layout_width="0dp" android:layout_height="56dp"
              android:hint="Nom del contrincant 1"
              android:ems="10"
              android:background="#ffffff"
              android:layout_marginTop="58dp"
              android:layout_marginBottom="23dp" app:layout_constraintEnd_toEndOf="@+id/contrincant2"
              app:layout_constraintBottom_toTopOf="@+id/contrincant2" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="@+id/contrincant2"/>
    <Button android:id="@+id/validarusuaris" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Validar usuari   "
            android:drawableRight="@drawable/tick"
            android:background="#87CEFA"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/contrincant2"
            android:layout_marginBottom="43dp" app:layout_constraintBottom_toTopOf="@+id/usuaricorrecte"/>
    <Button android:id="@+id/començarpartida" android:layout_width="0dp" android:layout_height="118dp"
            android:text="Començar partida"
            android:drawableTop="@drawable/poolcue"
            android:visibility="invisible"
            android:background="#87CEFA"
            app:layout_constraintTop_toBottomOf="@+id/usuaricorrecte" android:layout_marginBottom="92dp"
            app:layout_constraintEnd_toEndOf="@+id/validarusuaris"
            app:layout_constraintStart_toStartOf="@+id/usuaricorrecte" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="1dp"/>
    <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/usuaricorrecte"
              android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Usuari correcte!" android:ems="10"
              android:inputType="textPersonName"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/validarusuaris"
              android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/començarpartida"/>
    <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>