<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="#ADD8E6"
                                             android:id="@+id/opcions"
                                             android:layout_height="match_parent">

    <Button
            android:text="Canviar nom d'usuari"
            android:background="#87CEFA"
            android:layout_width="0dp"
            android:gravity="left|center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/canviarcontra"
            app:layout_constraintTop_toBottomOf="@+id/canviarusuari" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Button
            android:text="Canviar de contrasenya"
            android:background="#87CEFA"
            android:layout_width="0dp"
            android:gravity="left|center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/canviarusuari"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
</android.support.constraint.ConstraintLayout>