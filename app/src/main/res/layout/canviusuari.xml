<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Nom d'usuari anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Usuarinou"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="11dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Nom d'usuari actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="19dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Usuarinou"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Usuariantic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <Button
            android:text="Confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmarusuari"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Usuariantic"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tornar2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Usuariantic" android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
</android.support.constraint.ConstraintLayout>